                    <img src="~/images/icons/edit.svg" />
                </div>
                <div class="profile-info pt-0">
                    <div class="row">
                        <div class="form-group col-6">
                            <label class="p-label">First Name</label>
                            <input type="text" class="form-control" readonly value="Hanuman" />
                        </div>
                        <div class="form-group col-6">
                            <label class="p-label">Last Name</label>
                            <input type="text" class="form-control" readonly value="Mule" />
                        </div>
                        <div class="form-group col-6">
                            <label class="p-label">Email</label>
                            <input type="text" class="form-control" readonly value="Joesmith@gmail.com" />
                        </div>
                        <div class="form-group col-6">
                            <label class="p-label">Phone</label>
                            <input type="text" class="form-control" readonly value="213-156-9876" />
                        </div>
                        <div class="form-group col-6">
                            <label class="p-label">Account</label>
                            <input type="text" class="form-control" readonly value="Basic Buyer" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
