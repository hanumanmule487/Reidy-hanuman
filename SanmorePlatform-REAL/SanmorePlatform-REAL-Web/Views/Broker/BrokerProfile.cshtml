                            <label class="p-label">Phone</label>
                            <input type="text" class="form-control" readonly value="213-156-9876" />
                        </div>
                        <div class="form-group col-6">
                            <label class="p-label">Account</label>
                            <input type="text" class="form-control" readonly value="Basic Buyer" />
                        </div>
                    </div>
                    <strong class="info-title">Background</strong>
                    <div class="row">
                        <div class="form-group col-6">
                            <label class="p-label">Company Name</label>
                            <input type="text" class="form-control" readonly value="Sanmore" />
                        </div>
                        <div class="form-group col-6">
                            <label class="p-label">Business Address 1</label>
                            <input type="text" class="form-control" readonly value="1108 Main Street" />
                        </div>
                        <div class="form-group col-6">
                            <label class="p-label">City</label>
                            <input type="text" class="form-control" readonly value="Houston" />
                        </div>
                        <div class="form-group col-6">
                            <label class="p-label">State</label>
                            <input type="text" class="form-control" readonly value="213-156-9876" />
                        </div>
                        <div class="form-group col-6">
                            <label class="p-label">Zip Code</label>
                            <input type="text" class="form-control" readonly value="77007" />
                        </div>
                        <div class="form-group col-6">
                            <label class="p-label">Country</label>
