@model SanmorePlatform_REAL_Model.ViewModels.BrokerProfileModel
<div class="container my-4">
    <div class="profile-page">
        <div class="profile-section col-sm-12 col-md-4 me-md-4">
            <div class="profile-user">
                <img src="~/images/profile.png" />
                <strong class="h5">Joe Smith</strong>
                <p class="text-primary-m m-0">Broker</p>
            </div>

            <hr class="divider" />
            <div class="info-title">
                Account Fast-links
            </div>
            <div class="profile-setting pt-0">
                <div class="setting-menu active">
                    <span class="s-icon"><img src="~/images/icons/notification.svg" /></span>
                    <span class="s-menu">Notifications</span>
                </div>
                <span class="setting-menu">
                    <span class="s-icon"><img src="~/images/icons/file.svg" /></span>
                    <span class="s-menu">Broker Information</span>
                </span>
                <div class="setting-menu">
                    <span class="s-icon"><img src="~/images/icons/building.svg" /></span>
                    <span class="s-menu">Listing</span>
                </div>
                <div class="setting-menu">
                    <span class="s-icon"><img src="~/images/icons/doller.svg" /></span>
                    <span class="s-menu">Transactions</span>
                </div>
                <div class="setting-menu">
                    <span class="s-icon"><img src="~/images/icons/setting.svg" /></span>
                    <span class="s-menu">Account Settings</span>
                </div>
            </div>
            <hr class="divider" />
            <div class="setting-menu">
                <span class="s-icon"><img src="~/images/icons/message-circle.svg" /></span>
                <span class="s-menu">Chat</span>
            </div>
            <hr class="divider" />
            <div class="profile-action">
                <button class="btn btn-profile">Become a Broker</button>
                <button class="btn btn-profile mt-2">Log Out</button>
            </div>
        </div>
        <div class="notification-section col-sm-12 col-md-8">
            <div>
                <strong class="title">Notifications</strong>
                <div class="notification-block">
                    <div class="notification-icon">
                        <img src="~/images/icons/bell.svg" />
                    </div>
                    <div class="notification-content">Complete your Fast-Track account to efficiently and seamlessly invest in properties, find approved lending products, and participate in partner matching!</div>
                    <div class="notification-action">
                        <img src="~/images/icons/action.svg" />
                    </div>
                </div>
                <div class="notification-block">
                    <div class="notification-icon">
                        <img src="~/images/icons/hand-hi.svg" />
                    </div>
                    <div class="notification-content">
                        Hi, Welcome to Reidy! Here we try to streamline asset investment for you, providing you all the tools you would need. If you have any questions click <a class="text-primary-m">here</a>
