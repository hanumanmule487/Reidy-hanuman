    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const nextButtons = document.querySelectorAll(".btn-next");

            nextButtons.forEach(function (button) {
                button.addEventListener("click", function () {
                    const currentStep = this.closest(".form-step");
                    const requiredFields = currentStep.querySelectorAll("[required]");
                    let isValid = true;

                    requiredFields.forEach(function (field) {
                        if (field.value.trim() === "") {
                            isValid = false;
                            // Add error class to the field's parent div
                            field.parentNode.classList.add("has-error");
                        } else {
                            // Remove error class if exists
                            field.parentNode.classList.remove("has-error");
                        }
                    });

                    if (isValid) {
                        // Proceed to the next step
                        const nextStep = currentStep.nextElementSibling;
                        if (nextStep) {
                            currentStep.classList.remove("form-step-active");
                            nextStep.classList.add("form-step-active");
                        }
                    }
                });
            });
        });

