<body>
    
    <div class="container pt-page">
        <div class="progressbar">
            <div class="progress" id="progress"></div>
            <div class="progress-step progress-step-active" data-title="Intro"></div>
            <div class="progress-step" data-title="Company"></div>
            <div class="progress-step" data-title="Loans"></div>
            <div class="progress-step" data-title="Fraud identification"></div>
            <div class="progress-step" data-title="Fight fraud"></div>
        </div>
        <div class="card card-primary">
            <div class="card-body">
                <div class="progress-container">
                    <div class="progress-card-title">
                        <div class="title-left">
                            <button class="btn btn-sm btn-prev">
                                <img src="~/images/icons/angle-left-color.svg" />
                                <span>Back</span>
                            </button>
                        </div>
                        <div class="progress-title">Lender Sign Up</div>
                        <div class="title-right">
                            <button class="btn btn-sm">
                                <img src="~/images/icons/close.svg" />
                            </button>
                        </div>
                    </div>
                    <form class="form-container">
                        <!-- First step form -->
                        <div class="form-step form-step-active">
                            <div class="form-title">
                                Does this look right?
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6 col-md-6">
                                    <label for="first-name">First Name</label>
                                    <input type="text" class="form-control" id="first-name" name="first-name" placeholder="Enter your first name" value=@Model.FirstName disabled>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="last-name">Last Name</label>
                                    <input type="text" class="form-control" id="last-name" name="last-name" placeholder="Enter your last name" value=@Model.LastName disabled>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="email">Email</label>
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" value=@Model.Email disabled>
                                    <span id="erremail" class="text-danger" />

                                </div>
                                <div class="form-group col-md-6">
                                    <label for="phone">Phone</label>
                                    <input type="tel" class="form-control" id="phone" name="phone" placeholder="Enter your phone number" value=@Model.PhoneNumber disabled>
                                    <span id="errphonenumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="account">Account</label>
                                    <input type="text" class="form-control" id="account" name="account" placeholder="Enter your account" value=@Model.Account disabled>
                                     <span id="errAccount" class="text-danger"></span> 
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="social-media">Social Media</label>
                                    <input type="text" class="form-control" id="social-media" name="social-media" placeholder="Enter your social media" value=@Model.SocialMedia disabled>
                                    <span id="errSocialMedia" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="btns-group">
                                <button type="button" class="btn btn-next btn-outline-primary">Next</button>
                            </div>
                        </div>

                        <!-- Second step form -->
                        <div class="form-step">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="company-name">Company Name</label>
                                    <input type="text" class="form-control" id="company-name" name="company-name" placeholder="Enter your company name" value=@Model.LenderCompanyName>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="business-address">Business Address</label>
                                    <input type="text" class="form-control" id="business-address" name="business-address" placeholder="Enter your business address" value=@Model.BusinessAddress disabled>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="city">City</label>
                                    <input type="text" class="form-control" id="city" name="city" placeholder="Enter your city" value=@Model.City  disabled>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="state">State</label>
                                    <input type="text" class="form-control" id="state" name="state" placeholder="Enter your state" value=@Model.states disabled>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="zip-code">Zip Code</label>
                                    <input type="text" class="form-control" id="zip-code" name="zip-code" placeholder="Enter your zip code" value=@Model.ZipCode disabled>

                                </div>
                                <div class="form-group col-md-6">
                                    <label for="country">Country</label>
                                    <input type="text" class="form-control" id="country" name="country" placeholder="Enter your country" value=@Model.Country disabled>
                                </div>
                            </div>
                            <div class="btns-group">
                                <button type="button" class="btn btn-prev btn-outline-primary">Previous</button>
                                <button type="button" class="btn btn-next btn-outline-primary">Next</button>
                            </div>
                        </div>

                        <!-- Third step form -->
                        <div class="form-step">
                            <div class="form-title">
                                We like to know just a little bit more about your position
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="Role">Role In lending Company</label>
                                    <input type="text" class="form-control" id="Role" name="Role" placeholder="Role In The Lending Company" value=@Model.RoleInLendingCompany disabled>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="Entity-type">Entity Type</label>
                                    <input type="text" class="form-control" id="Entity-type" name="Entity-TYPE" placeholder="Enter Entity Type" value=@Model.EntityType disabled>
                                </div>
                                <div class="form-group col-md-6">
                                    <div>
                                    <label class="form-group col-md-3" for="loans-year">loans done/year</label>
                                    <input type="number" class="form-control-lender" id="" name="loans-year" placeholder="Loans done per year" value=@Model.EstimatedLoansDonePerYear disabled>
                                   </div>
                                   <div>
                                    <label class="form-group col-md-3" for="business-years">Years in Business</label>
                                    <input type="number" class="form-control-lender" id="business-years" name="business-years" placeholder="Years in Business" value=@Model.YearsInBusiness disabled>
                                   </div>
                                </div>

                                <div class="form-group col-md-6">
                                    <label for="Lender-phone">lender phone</label>
                                    <input type="number" class="form-control" id="Lender-phone" name="Lender-PHONE" placeholder="Enter Phone Number" value=@Model.LenderPhoneNo disabled>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="Doc-Drafting">Preferred Attorney for Doc Drafting </label>
                                    <input type="text" class="form-control" id="Doc-drafting" name="Doc-Drafting" placeholder="Preferred Attorney for Doc Drafting" value=@Model.PreferredAttorneyForDocDrafting disabled>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="Attorney-number">Preferred Attorney Phone Number </label>
                                    <input type="number" class="form-control" id="Attorney-number" name="Attorney-Number" placeholder="Preferred Attorney Phone Number" value=@Model.PreferredAttorneyPhone>
                                </div>
                                <div class="form-title">
                                    Are you interested in servicing your loans in Reidy
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="tc-upload"></label>
                                    <div class="radio-btns">
                                        <input type="radio" id="tc-yes" name="tc-upload" value="Yes">
                                        <label for="tc-yes">Yes</label>
                                        <input type="radio" id="tc-no" name="tc-upload" value="No">
                                        <label for="tc-no">No</label>
                                    </div>
                                </div>
                            </div>
                            <div class="btns-group">
                                <button type="button" class="btn btn-prev btn-outline-primary">Previous</button>
                                <button type="button" class="btn btn-next btn-outline-primary">Next</button>
                            </div>
                        </div>

                        <!-- Fourth step form -->
                        <div class="form-step">
                            <div class="form-title">
                                Can you please provide proof of Lendable Funds
                            </div>
                            <div class="row">
                                <div class="form-group">
                                    <label for="upload-documents">Upload Documents</label>
                                    <input type="file" class="form-control" id="upload-documents" name="upload-documents" value=@Model.UploadDocuments>
                                </div>
                                   <div b-3mwa5ejgrd="" class="or mt-4">OR</div>
                                <div class="cloud-lender">
                                    <img class="cloud-image" src="~/Images/icons/upload-cloud.png"/>
                                <h1 class="drag-files">Drag files</h1>
                               </div>
                            </div>
                            <div class="btns-group">
                                <button type="button" class="btn btn-prev btn-outline-primary">Previous</button>
                                <button type="button" class="btn btn-next btn-outline-primary">Next</button>
                            </div>
                        </div>

                        <!-- Fifth step form -->
                        <div class="form-step">
                            <div class="form-title">
                                Help us fight fraud!
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="identification-type">Identification type</label>
                                    <input type="text" class="form-control" id="identification-type" name="identification-type" placeholder="Enter your identification type" value=@Model.IdentificationType>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="upload-documents">Upload Documents</label>
                                    <input type="file" class="form-control" id="upload-documents" name="upload-documents" value=@Model.UploadLenderFile>
                                </div>
                                <div class="btns-group">
                                    <button type="button" class="btn btn-prev btn-outline-primary">Previous</button>
                                    <button type="button" class="btn btn-next btn-outline-primary">Next</button>
                                </div>
                            </div>
                        </div>
                    
                    </form>
                 </div>
            </div>
        </div>
    </div>
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    

