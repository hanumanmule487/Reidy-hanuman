    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Error",
        "System": "Debug"
      }
    },

    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "D:\\Project\\SanmorePlatform-REAL\\SanmorePlatform-REAL\\SanmorePlatform-REAL-API\\Logs\\webapi-.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}, [{Level}] [{SourceContext}] [{EventId}] {Message}{NewLine}{Exception}",
